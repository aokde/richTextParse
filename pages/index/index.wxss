/* 分页入口 */
.sort-entry {
  padding: 25rpx 25rpx 0;
}
.sort-entry-button {
  display:inline-block;
  width: 31.33%;
  line-height: 72rpx;
  margin-right: 3%;
  background: #fff;
  text-align: center;
  border-radius:10rpx;
}
.sort-entry-button::before {
  display: block;
  font-size: 56rpx;
  padding-top: 16rpx;
  color: #0aba07;
}
.sort-entry .last {
  margin-right:0; 
}

/* 首页滚动 */
.slide-warp {
  margin:25rpx 25rpx 0;
  height: 530rpx;
  background: #fff;
  padding: 25rpx 25rpx 5rpx;
  border-radius: 24rpx;
}
.slide-image {
  width: 100%;
  height: 420rpx;
}
.slide-text {
  padding: 0 3%;
  display: block;
  font-size: 28rpx;
  height:2;
  line-height: 2;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: center;
}